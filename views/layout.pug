doctype html
html 
    head 
        title Technical Blog Posts 
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')
    body
        nav.navbar.navbar-expand-lg.navbar-red
            .container-fluid
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon  
                .navbar-header
                    a.navbar-brand(href='/') TECHNICAL BLOG POSTS                      
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0
                        li.nav-item
                            a.nav-link.active(aria-current='page' href='/') HOME
                        li.nav-item
                        if user 
                            a.nav-link(href='/articles/add') ADD BLOG  
                        if user 
                            li 
                                a.nav-link(href='/users/logout') LOGOUT 
                        else 
                            li 
                                a.nav-link(href='/users/register') SIGNUP   
                            li 
                                a.nav-link(href='/users/login') LOGIN  
                        
        .container-fluid.h-100
            .row.justify-content-center.h-100
                .col-12
                    != messages('message', locals)
                    if errors 
                        each error, i in errors 
                            div(class="alert alert-danger") #{error.msg} 
                    block content 
                    footer.text-center 
                        p copyright &copy: 2021
                script(src='/bower_components/jquery/dist/jquery.js')        
                script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
                script(src='/js/main.js')